{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-console": "off",
        "react/prop-types": "off",
        "skipBlankLines": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": ["node_modules/", "src/"]
            }
        }
    }
}
